# Screenshot
# Capture whole screen
bindsym Print exec maim $HOME/Pictures/screen_`date +%Y-%m-%d_%H:%M:%S`.png
# Capture current window
bindsym $mod+Shift+Print exec maim -i $(xdotool getactivewindow) $HOME/Pictures/scren_win_`date +%Y-%m-%d_%H:%M:%S`.png
# Crop area
bindsym $mod+Print exec maim -s $HOME/Pictures/screen_area_`date +%Y-%m-%d_%H:%M:%S`.png

